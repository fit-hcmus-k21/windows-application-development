<Window x:Class="DemoValidation.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoValidation"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="ReportWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <StackPanel>
        <lvc:CartesianChart Name="chart" LegendLocation="Bottom" Height="200"/>
        <lvc:PieChart Name="pie" LegendLocation="Bottom" Height="200"/>
    </StackPanel>
</Window>
